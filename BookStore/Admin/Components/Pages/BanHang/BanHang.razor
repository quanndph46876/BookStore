    protected override async Task OnInitializedAsync()
    {
        TinhThanh = await xuLyDiaChi.ParseDiaChiAsync("wwwroot/Files/ThanhPho.txt");
        vouchers = await apiService.GetAsync<List<Voucher>>("GiamGia");

        var savedOrders = await LocalStorage.GetItemAsync<List<Order>>("banhang_orders");
        var savedIndex = await LocalStorage.GetItemAsync<int>("banhang_currentIndex");
        var status = await LocalStorage.GetItemAsync<string?>("status");
        if (savedOrders != null && savedOrders.Count > 0)
        {
            Orders = savedOrders;
            CurrentOrderIndex = savedIndex;
            allProducts = await apiService.GetAsync<List<ProductDTO>>("Product") ?? new();

            var allproduct = await GetChiTietMonAnService.GetAll();
            Products = allproduct?.Where(p => p.Soluong >= 1 && p.TrangThai == true && allProducts.FirstOrDefault(m => m.Id == p.ProductId && m.TrangThai == true) != null).ToList() ?? new();
            foreach (var item in Orders)
            {
                if (item?.Products != null)
                {
                    item.Products.RemoveAll(item => !Products.Any(p => p.Id == item.Id));
                }
            }

            if (status == "success")
            {
                ConfirmOrder();
                await LocalStorage.RemoveItemAsync("status");
            }

        }
        else
        {
            Orders = new();
            CurrentOrderIndex = 0;
        }

        SwitchOrder(CurrentOrderIndex);
    }

